using System;

namespace attv
{
	class Program
	{
		public static void Main(string[] args)
		{
			Console.WriteLine("Digite um número decimal:");
			double numDec = Convert.ToDouble(Console.ReadLine());
			Console.WriteLine("O número decimal digitado é: " + numDec);
			
			Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}
